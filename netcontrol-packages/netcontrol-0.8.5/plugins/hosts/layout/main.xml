<xml>
    <toolbar>
        <button id="add" text="Add host" icon="/dl/core/ui/stock/add.png" />
        <button id="hostname" text="Change hostname" icon="/dl/core/ui/stock/server.png" />
    </toolbar>

    <label text="Hosts" size="5" />

    <pad>
        <dt id="list" width="100%">
            <dtr header="True">
                <dth>
                    <label text="IP address" />
                </dth>
                <dth>
                    <label text="Hostname" />
                </dth>
                <dth>
                    <label text="Aliases" />
                </dth>
                <dth width="1" />
            </dtr>
        </dt>
    </pad>

    <dialogbox id="dlgEdit">
        <formline text="IP address">
            <textinput id="ip" name="ip" />
        </formline>
        <formline text="Hostname">
            <textinput id="name" name="name" />
        </formline>
        <formline text="Aliases">
            <textinput id="aliases" name="aliases" />
        </formline>
    </dialogbox>

    <inputbox id="dlgSelf" text="Hostname" />
</xml>
