<xml>
	<toolbar>
		<button text="New task" icon="/dl/core/ui/stock/add.png" id="addTask" />
	</toolbar>

	<label size="5" text="Running jobs" />

	<pad>
		<dt id="running" width="100%">
			<dtr header="True">
				<dth><label text="ID" /></dth>
				<dth><label text="Name" /></dth>
				<dth><label text="Level" /></dth>
				<dth width="1" />
			</dtr>
		</dt>
	</pad>

	<label size="5" text="Scheduled jobs" />
	<pad>
		<dt id="scheduled" width="100%">
			<dtr header="True">
				<dth><label text="Name" /></dth>
				<dth><label text="Level" /></dth>
				<dth><label text="Volume" /></dth>
				<dth><label text="Date" /></dth>
				<dth><label text="Type" /></dth>
				<dth width="1" />
			</dtr>
		</dt>
	</pad>

	<label size="5" text="Terminated jobs" />
	<pad>
		<dt id="terminated" width="100%">
			<dtr header="True">
				<dth><label text="Status" /></dth>
				<dth><label text="Name" /></dth>
				<dth><label text="ID" /></dth>
				<dth><label text="Level" /></dth>
				<dth><label text="Files" /></dth>
				<dth><label text="Bytes" /></dth>
				<dth><label text="Finished" /></dth>
			</dtr>
		</dt>
	</pad>    
</xml>
