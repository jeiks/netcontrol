<xml>
    <dialogbox hidecancel="True" id="dlgAbout">
        <div style="float:left">
            <image file="/dl/core/ui/logo_big.png" />
        </div>
        <div style="float:left;padding: 5px 0 0 10px">
            <tooltip id="ver">
                <label text="NetControl" size="4" />
            </tooltip>
            <br/>
            <label text="Web administration toolset" />
        </div>
        <div style="clear:both" />
        <br/>
        <button text="Home" onclick="window.open('http://netcontrol.org')" icon="/dl/core/ui/stock/home.png" />
        <button text="Bug tracker" url="window.open('https://launchpad.net/netcontrol/+bugs')" icon="/dl/core/ui/stock/bug.png" />
        <button text="Wiki" onclick="window.open('http://wiki.netcontrol.org')" icon="/dl/core/ui/stock/book.png" />
    </dialogbox>
</xml>
