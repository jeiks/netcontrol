<xml>

<div class="ui-dashboard-banner">
    <div style="float:right">
        <button id="btnAddWidget" text="Adicionar widget" icon="/dl/core/ui/stock/add.png" />
        <button text="Atualizar" icon="/dl/core/ui/stock/refresh.png" />
    </div>
    <img id="icon" />
    <span id="host" />
    <span id="distro" />
</div>

    <div id="save-query" style="display:none">
        <button onclick="return dashboardSave()" text="Salvar alterações" design="primary" />
        <button text="Reverter" design="danger" />
    </div>

<pad id="main">

    <hcontainer spacing="15">
        <div id="cleft" class="dashboard" />
        <div id="cright" class="dashboard" />
    </hcontainer>

    <div id="trash" class="ui-dashboard-trash dashboard" style="opacity:0">
        Drop here to remove widget
    </div>

    <script>
        $('.dashboard').sortable({
            connectWith: '.dashboard',
            handle: 'div.handle',
            revert: true,
        }).disableSelection();
    </script>
</pad>

</xml>
